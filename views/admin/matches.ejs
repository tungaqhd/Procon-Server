<%- include('header') %>
<div class="container">
    <div class="addMatch">
        <h1>Add Team</h1>
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTeam">
            <i class="fas fa-plus"></i> Add
        </button>
        <div class="modal fade" id="addTeam" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Match</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/admin/matches/add" method="post">
                            <div class="form-group">
                                <label for="team1">Team 1</label>
                                <select class="form-control" id="team1" name="team1">
                                    <% view.users.forEach((user) => { %>
                                        <option value="<%=user._id%>"><%=user.teamName%></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="team2">Team 2</label>
                                <select class="form-control" id="team2" name="team2">
                                    <% view.users.forEach((user) => { %>
                                        <option value="<%=user._id%>"><%=user.teamName%></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="map">Map</label>
                                <script type="text/javascript">
                                    let ProconMap = new Map()
                                </script>
                                <select class="form-control" id="map" name="map">
                                    <% view.ProconMap.forEach((map) => { %>
                                        <option value="<%=map.name%>"><%=map.name%></option>
                                    <% }) %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Turns</label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-gamepad"></i></span>
                                        </div>
                                        <input type="number" class="form-control" name="turns">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Timer</label>
                                <div class="form-group">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-hourglass-half"></i></span>
                                        </div>
                                        <input type="turnMillis" class="form-control" name="turn">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-lg btn-block btn-success"><i class="fas fa-plus"></i> Add</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('footer') %>